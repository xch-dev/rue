test fn simple() -> Int {
    { 42 }
}

test fn capture() -> Int {
    let value = 42;
    { value * 2 }
}

test fn shadow() -> Int {
    let value = 42;
    value + {
        let original = value;
        let value = 34;
        original * value
    } + value
}

test fn binding() -> Int {
    let value = {
        let value = 34;
        value * 2
    };
    value + 1
}

test fn nested() -> Int {
    {{{ 42 }}}
}
